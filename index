    <script>
        // Оптимізація для мобільних пристроїв
                
        document.addEventListener('DOMContentLoaded', function() {
            const scheduleImg = document.getElementById('schedule-img');
            const scheduleContainer = document.querySelector('.schedule-img-container');
            
            if (scheduleImg) {
                // Створюємо оверлей для повноекранного режиму
                const overlay = document.createElement('div');
                overlay.className = 'overlay';
                document.body.appendChild(overlay);
                
                // Створюємо кнопку закриття
                const closeBtn = document.createElement('button');
                closeBtn.className = 'close-btn';
                closeBtn.innerHTML = '<i class="fas fa-times"></i>';
                document.body.appendChild(closeBtn);
                
                // Функція для відкриття повноекранного режиму
                function openFullscreen() {
                    scheduleImg.classList.add('fullscreen');
                    overlay.classList.add('active');
                    closeBtn.classList.add('active');
                    document.body.style.overflow = 'hidden';
                }
                
                // Функція для закриття повноекранного режиму
                function closeFullscreen() {
                    scheduleImg.classList.remove('fullscreen');
                    scheduleImg.classList.remove('zoomed');
                    overlay.classList.remove('active');
                    closeBtn.classList.remove('active');
                    document.body.style.overflow = 'auto';
                }
                
                // Обробник кліку на зображення
                scheduleContainer.addEventListener('click', function(e) {
                    e.stopPropagation();
                    if (scheduleImg.classList.contains('fullscreen')) {
                        // Якщо вже повний екран - закрити
                        closeFullscreen();
                    } else {
                        // Якщо не повний екран - відкрити
                        openFullscreen();
                    }
                });
                
                // Обробник кліку на оверлей
                overlay.addEventListener('click', closeFullscreen);
                
                // Обробник кліку на кнопку закриття
                closeBtn.addEventListener('click', closeFullscreen);
                
                // Закриття по Escape
                document.addEventListener('keydown', function(e) {
                    if (e.key === 'Escape' && scheduleImg.classList.contains('fullscreen')) {
                        closeFullscreen();
                    }
                });
                
                // Дозвіл масштабування в повноекранному режимі
                let scale = 1;
                scheduleImg.addEventListener('wheel', function(e) {
                    if (scheduleImg.classList.contains('fullscreen')) {
                        e.preventDefault();
                        
                        if (e.deltaY < 0) {
                            // Збільшення
                            scale = Math.min(scale + 0.1, 3);
                        } else {
                            // Зменшення
                            scale = Math.max(scale - 0.1, 0.5);
                        }
                        
                        scheduleImg.style.transform = `scale(${scale})`;
                        scheduleImg.classList.add('zoomed');
                    }
                });
                
                // Дозвіл перетягування в повноекранному режимі
                let isDragging = false;
                let startX, startY, scrollLeft, scrollTop;
                
                scheduleImg.addEventListener('mousedown', function(e) {
                    if (scheduleImg.classList.contains('fullscreen') && scale > 1) {
                        isDragging = true;
                        startX = e.pageX - scheduleImg.offsetLeft;
                        startY = e.pageY - scheduleImg.offsetTop;
                        scrollLeft = scheduleImg.scrollLeft;
                        scrollTop = scheduleImg.scrollTop;
                        scheduleImg.style.cursor = 'grabbing';
                    }
                });
                
                document.addEventListener('mousemove', function(e) {
                    if (!isDragging) return;
                    e.preventDefault();
                    const x = e.pageX - scheduleImg.offsetLeft;
                    const walkX = (x - startX) * 1.5;
                    scheduleImg.scrollLeft = scrollLeft - walkX;
                });
                
                document.addEventListener('mouseup', function() {
                    isDragging = false;
                    if (scheduleImg.classList.contains('fullscreen')) {
                        scheduleImg.style.cursor = 'grab';
                    }
                });
                
                // Аналогічно для touch подій для мобільних пристроїв
                scheduleImg.addEventListener('touchstart', function(e) {
                    if (scheduleImg.classList.contains('fullscreen') && scale > 1) {
                        isDragging = true;
                        startX = e.touches[0].pageX - scheduleImg.offsetLeft;
                        startY = e.touches[0].pageY - scheduleImg.offsetTop;
                        scrollLeft = scheduleImg.scrollLeft;
                        scrollTop = scheduleImg.scrollTop;
                    }
                });
                
                scheduleImg.addEventListener('touchmove', function(e) {
                    if (!isDragging) return;
                    e.preventDefault();
                    const x = e.touches[0].pageX - scheduleImg.offsetLeft;
                    const walkX = (x - startX) * 1.5;
                    scheduleImg.scrollLeft = scrollLeft - walkX;
                });
                
                scheduleImg.addEventListener('touchend', function() {
                    isDragging = false;
                });
                
                // Пінч-зум для мобільних пристроїв
                let initialDistance = null;
                
                scheduleImg.addEventListener('touchstart', function(e) {
                    if (e.touches.length === 2 && scheduleImg.classList.contains('fullscreen')) {
                        initialDistance = Math.hypot(
                            e.touches[0].pageX - e.touches[1].pageX,
                            e.touches[0].pageY - e.touches[1].pageY
                        );
                    }
                });
                
                scheduleImg.addEventListener('touchmove', function(e) {
                    if (e.touches.length === 2 && initialDistance !== null && scheduleImg.classList.contains('fullscreen')) {
                        e.preventDefault();
                        const currentDistance = Math.hypot(
                            e.touches[0].pageX - e.touches[1].pageX,
                            e.touches[0].pageY - e.touches[1].pageY
                        );
                        
                        const delta = (currentDistance - initialDistance) * 0.01;
                        scale = Math.max(0.5, Math.min(3, scale + delta));
                        scheduleImg.style.transform = `scale(${scale})`;
                        scheduleImg.classList.add('zoomed');
                        initialDistance = currentDistance;
                    }
                });
                
                scheduleImg.addEventListener('touchend', function() {
                    initialDistance = null;
                });
            }
            
            // Підтвердження переходу за зовнішніми посиланнями
            const externalLinks = document.querySelectorAll('a[target="_blank"]');
            externalLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    if (!confirm('Перейти за посиланням?')) {
                        e.preventDefault();
                    }
                });
            });
                     
            // Виділення поточного тижня
            const today = new Date();
            const currentDateStr = today.toLocaleDateString('uk-UA', {
                day: '2-digit',
                month: '2-digit',
                year: '2-digit'
            }).replace(/\./g, '.');
            
            const weekCells = document.querySelectorAll('.weeks-table td');
            weekCells.forEach(cell => {
                const cellText = cell.textContent;
                if (cellText.includes(currentDateStr)) {
                    cell.classList.add('current-week');
                    
                    // Додаємо мітку "Поточний тиждень"
                    const label = document.createElement('div');
                    label.textContent = 'Поточний';
                    label.style.cssText = 'font-size:0.75rem;color:#2e7d32;font-weight:bold;margin-top:4px;';
                    cell.appendChild(label);
                }
            });
                  
            // Плавна прокрутка до секцій
            const sectionTitles = document.querySelectorAll('.section-title');
            sectionTitles.forEach(title => {
                title.style.cursor = 'pointer';
                title.addEventListener('click', function() {
                    const section = this.closest('.section');
                    section.scrollIntoView({ behavior: 'smooth', block: 'start' });
                });
            });
        });
        
    </script>
</body>
</html>
